@model List<TareaModel>


@{
    <html>

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Web1</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Web1.styles.css" asp-append-version="true" />
    </head>

    <body>
        <h1 class="text-center">Tareas Creadas</h1>
        <p class="text-body text-center">La fecha es @DateTime.Now</p>

        <table class="table table-hover table-bordered ">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Date Start</th>
                    <th>Date End</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @{
                    int i = 0;
                }
                @foreach (var tr in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@tr.Name</td>
                        <td>@tr.Description 3</td>
                        <td>@tr.Status</td>
                        <td>@tr.Priority</td>
                        <td>@tr.DateStart</td>
                        <td>@tr.DateEnd</td>

                        <td> <a asp-controller="Tareas" asp-action="EditarTareas" asp-route-id="@tr.Id">Editar</a> </td>
                        
                        <form asp-action="EliminarTarea" asp-controller="Tareas" method="post">
                            <td><button>Eliminacion</button></td>
                        </form>
                    </tr>
                }
               
            </tbody>
        </table>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

    </body>

    </html>
}
