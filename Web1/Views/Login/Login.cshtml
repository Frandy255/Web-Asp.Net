@model LoginModel
 
@*Esto es para indicar a que controller se enviaran los datos, esto es Data binding, pasando por model binding*@
@using (Html.BeginForm("Login", "Login", new {ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger"})
    
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">

            @Html.TextBoxFor(m => m.UserName)
            @Html.ValidationMessageFor(m => m.UserName, "")
        </div>
    </div>

    <div class="form-group my-2">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label " })
        <div class="col-md-10">

            @Html.TextBoxFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password, "")
        </div>
    </div>

    <div class="form-group my-3">
        <div class="col-md-offset-2 row-cols-5 ">
            <input type="submit" value="Ingresar" class="btn btn-default text-white bg-black " />
        </div>
   </div>









}